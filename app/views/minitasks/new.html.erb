<%# 入力フォーム %>
<%= form_with(model: [@genre, @task, @minitask_timer],url: genre_task_minitasks_path, local: true) do |f| %>

  <%# エラーハンドリング %>
  <%= render "shared/error_message", model: f.object %>

  <%# ミニタスク入力 %>
  <%= f.label :name %>
  <%= f.text_area :name, placeholder:"タスク名"%>

  <%= f.label :text %>
  <%= f.text_area :text, placeholder:"メモ"%>

  <%# 日付の入力 %>
  <%= f.label :time %>
  <%= f.date_field :time %>

  <%= f.submit "投稿する"%>
<% end %>