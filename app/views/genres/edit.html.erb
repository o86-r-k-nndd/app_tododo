<%# 入力フォーム %>
<%= form_with model: @genre, class: 'form-main', local: true do |f| %>
  <div class="form-wrap">

    <%# エラーハンドリング %>
    <div class="render-error">
      <%= render "shared/error_message", model: f.object %>
    </div>

    <div class="form-group">
      <%= f.label "ジャンル名を編集してください" %>
      <%= f.text_area :name, placeholder:"ジャンルの名前を記述してください"%>
    </div>

    <div class="form-group">
      <%= f.label "説明の内容を編集してください" %>
      <%= f.text_area :text, placeholder:"ジャンルの説明を記述してください"%>
    </div>

    <div class="login-btn">
      <%= f.submit "更新する"%>
    </div>

  </div>
<% end %>