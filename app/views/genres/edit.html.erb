<%# 入力フォーム %>
<%= form_with model: @genre, class: 'form-main', local: true do |f| %>
  <div class="form-wrap">

    <%# エラーハンドリング %>
    <div class="render-error">
      <%= render "shared/error_message", model: f.object %>
    </div>

     <div class='form-header'>
      <h1 class='form-header-text'>ジャンルを編集してください</h1>
    </div>

    <div class="form-group">
      <%= f.label "ジャンルの名前を編集してください" %>
      <%= f.text_area :name, placeholder:"ジャンルの名前を入力してください"%>
    </div>

    <div class="form-group">
      <%= f.label "ジャンルの説明のを編集してください" %>
      <%= f.text_area :text, placeholder:"ジャンルの説明を入力してください"%>
    </div>

    <div class="form-btn">
      <%= f.submit "更新する"%>
    </div>

  </div>
<% end %>